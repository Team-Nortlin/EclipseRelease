{
  "name": "eclipse-menu",
  "private": true,
  "version": "0.1.1",
  "description": "EclipseMenu - Aplicativo desktop com interface moderna inspirada no NordVPN",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cd app-ui && vite",
    "build": "cd app-ui && tsc -b && vite build",
    "lint": "cd app-ui && eslint .",
    "preview": "cd app-ui && vite preview",
    "check": "cd app-ui && tsc -b --noEmit",
    "electron": "electron .",
    "cronoz": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "package": "npx electron-packager . Eclipse --platform=win32 --arch=x64 --out=dist/ --icon=app-ui/public/icon.ico --overwrite"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "discord-rpc": "^4.0.1",
    "discord.js": "^14.14.1",
    "discord.js-selfbot-v13": "^3.7.0",
    "ffmpeg-static": "^5.2.0",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.511.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-player": "^3.3.3",
    "react-router-dom": "^7.3.0",
    "tailwind-merge": "^3.0.2",
    "undici-fetch": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.18.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^25.0.0",
    "electron-packager": "^17.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.eclipsemenu.app",
    "productName": "EclipseMenu",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "app-ui/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "app-ui/dist",
        "to": "app-ui/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "app-ui/public/icon.png",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "app-ui/public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "app-ui/public/icon.png"
    }
  }
}
